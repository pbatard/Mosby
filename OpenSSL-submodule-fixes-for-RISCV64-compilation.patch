+++ b/crypto/evp/evp_enc.c
@@ -1790,7 +1790,7 @@ int EVP_CIPHER_CTX_copy(EVP_CIPHER_CTX *out, const EVP_CIPHER_CTX *in)
 
     EVP_CIPHER_CTX_reset(out);
 
