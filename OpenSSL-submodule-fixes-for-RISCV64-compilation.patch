     if (ret != NULL)                                                           \
-        *ret = *in;                                                            \
+        memcpy(ret, in, sizeof(*ret));                                         \
     return ret;                                                                \
 }                                                                              \
 static void name##_copyctx(void *voutctx, void *vinctx)                        \
 {                                                                              \
     CTX *outctx = (CTX *)voutctx;                                              \
     CTX *inctx = (CTX *)vinctx;                                                \
-    *outctx = *inctx;                                                          \
+    memcpy(outctx, inctx, sizeof(CTX));                                                          \
 }                                                                              \
 PROV_FUNC_DIGEST_FINAL(name, dgstsize, fin)                                    \
